{
  "name": "expigate",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "start:dev": "nodemon --legacy-watch index.js",
    "docker:build": "docker build -t snipkode/api-gateway:latest .",
    "docker:image:push": "docker push snipkode/api-gateway:latest",
    "docker:publish": "npm run docker:build && npm run docker:image:push"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.2.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.0",
    "postman-to-openapi": "^1.7.3",
    "swagger-ui-express": "^5.0.1",
    "validator": "^13.15.15"
  },
  "devDependencies": {
    "dotenv": "^17.2.1",
    "nodemon": "^3.1.10"
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules/",
      "databases/",
      "logs/",
      "public/",
      "*.test.js",
      ".git/",
      "tmp/",
      "README.md"
    ]
  }
}
